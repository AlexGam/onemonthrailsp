<h1>Listing pins</h1>

<div class="panel panel-primary">
  <div class="panel-heading"><b>Lista de Pines</b></div>
  <table class="table">
    <thead>
      <tr>
        <th>Description</th>
        <th>Usuario</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @pins.each do |pin| %>
        <tr>
          <td><%= pin.description %></td>
          <td><%= pin.user.email %></td>
          <td><%= link_to 'Detail', pin %></td>
          <% if pin.user == current_user %>
            <td><%= link_to 'Edit', edit_pin_path(pin) %></td>
            <td><%= link_to 'Delete', pin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
      <% end %>
   <!-- </tbody>-->
  </table>
  <% if user_signed_in? %>
  <div class="panel-footer">
    <%= link_to 'New Pin', new_pin_path %>
  </div>
  <% end %>
</div>